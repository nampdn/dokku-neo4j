#!/usr/bin/env bash
export NEO4J_IMAGE=${NEO4J_IMAGE:="neo4j"}
export NEO4J_IMAGE_VERSION=${NEO4J_IMAGE_VERSION:="4.0.0"}
export NEO4J_ROOT=${NEO4J_ROOT:="$DOKKU_LIB_ROOT/services/neo4j"}
export NEO4J_HOST_ROOT=${NEO4J_HOST_ROOT:=$NEO4J_ROOT}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="neo4j"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$NEO4J_ROOT
export PLUGIN_DATA_HOST_ROOT=$NEO4J_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(7474 7473 7687)
export PLUGIN_DATASTORE_WAIT_PORT=7687
export PLUGIN_DEFAULT_ALIAS="NEO4J"
export PLUGIN_DISABLE_PULL=${NEO4J_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="NEO4J_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_NEO4J"
export PLUGIN_IMAGE=$NEO4J_IMAGE
export PLUGIN_IMAGE_VERSION=$NEO4J_IMAGE_VERSION
export PLUGIN_SCHEME="bolt"
export PLUGIN_SERVICE="Neo4j"
export PLUGIN_VARIABLE="NEO4J"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export NEO4J_CONFIG_OPTIONS=${NEO4J_CONFIG_OPTIONS:=""}
